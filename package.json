{
  "name": "vite-react-motoko",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "setup": "npm i && icp network start -d && icp deploy && npm run icp:env",
    "start": "run-p frontend",
    "frontend": "vite --port 3000",
    "backend": "mo-dev --generate --deploy -y",
    "deploy:backend": "npx @icp-sdk/icp-cli deploy backend",
    "deploy": "npx @icp-sdk/icp-cli deploy",
    "build": "tsc && vite build",
    "test": "run-s test:backend test:frontend",
    "test:frontend": "vitest run",
    "test:backend": "mo-test",
    "format": "prettier --write \"src/**/*.{json,js,jsx,ts,tsx,css,scss}\" \"backend/**/*.mo\"",
    "sources": "mops sources",
    "icp:env": "node scripts/icp-env.mjs",
    "generate:hooks": "npx @ic-reactor/cli sync -c backend",
    "postinstall": "mops install"
  },
  "dependencies": {
    "@ic-reactor/react": "^3.0.0",
    "@icp-sdk/core": "^5.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-query": "^3.39.3"
  },
  "devDependencies": {
    "@ic-reactor/cli": "^0.0.0-beta.1",
    "@ic-reactor/vite-plugin": "^0.1.0",
    "@icp-sdk/bindgen": "^0.2.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-fetch": "^4.0.0",
    "dotenv": "^16.4.5",
    "ic-mops": "^1.1.1",
    "jsdom": "^22.1.0",
    "mo-dev": "^0.13.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.1",
    "prettier-plugin-motoko": "^0.10.1",
    "sass": "^1.81.0",
    "typescript": "^5.7.2",
    "vite": "^6.0.1",
    "vite-plugin-environment": "^1.1.3",
    "vitest": "^2.1.6"
  }
}
